<%= form_for @restaurant, :html => { :class => 'form-horizontal', :multipart => true } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :address, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :address, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :phone, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :phone, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :image, :class => 'control-label' %>
    <div class="controls">
        <%= image_tag(@restaurant.image_url) if @restaurant.image? %>
        <%= f.file_field :image, :class => 'file_field' %>
        <%= f.hidden_field :image_cache, :class => 'hidden_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :menu, :class => 'control-label' %>
    <div class="controls">
        <%= image_tag(@restaurant.menu_url) if @restaurant.menu? %>
        <%= f.file_field :menu, :class => 'file_field' %>
        <%= f.hidden_field :menu_cache, :class => 'hidden_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                restaurants_path, :class => 'btn' %>
  </div>
<% end %>
